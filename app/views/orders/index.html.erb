<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th colspan="3" scope="col" class="px-6 py-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td class="px-6 py-4"><%= link_to 'Show', order %></td>
        <td class="px-6 py-4"><%= link_to 'Edit', edit_order_path(order) %></td>
        <td class="px-6 py-4"><%= link_to 'Destroy', order_path(order), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Order', new_order_path %>
